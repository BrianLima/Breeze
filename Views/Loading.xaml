<UserControl x:Class="GameLauncher.Views.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Helpers="clr-namespace:GameLauncher.Models"
             xmlns:ViewModels="clr-namespace:GameLauncher.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             d:DataContext="{d:DesignInstance Type=ViewModels:LoadingViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid x:Name="ProgressGrid" MaxWidth="200" MaxHeight="200"
          VerticalAlignment="Center" HorizontalAlignment="Center">
        <materialDesign:Card
  UniformCornerRadius="14"
  Padding="4">
            <ProgressBar
    Style="{StaticResource MaterialDesignCircularProgressBar}"
    Value="50"
    IsIndeterminate="True" />
        </materialDesign:Card>
    </Grid>
</UserControl>
