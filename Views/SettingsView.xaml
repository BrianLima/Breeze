<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:GameLauncher.Views"
             xmlns:ViewModels="clr-namespace:GameLauncher.ViewModels"
             xmlns:Models="clr-namespace:GameLauncher.Models"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             x:Class="GameLauncher.Views.SettingsView"
             d:DataContext="{d:DesignInstance Type=ViewModels:SettingsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">

    <materialDesign:ColorZone Mode="PrimaryMid" Margin="0 -6 0 0">
        <!-- Negative margin to remove whitespace :D -->
        <StackPanel Orientation="Horizontal"
                Margin="4"
                VerticalAlignment="Top"
                HorizontalAlignment="Left">
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                     Margin="4"
                     IsChecked="True"
                     Content="GENERAL" />
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                     Margin="4"
                     IsChecked="False"
                     Content="THEMES" />
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                     Margin="4"
                     IsChecked="False"
                     Content="GENRES" />
        </StackPanel>
    </materialDesign:ColorZone>
</UserControl>