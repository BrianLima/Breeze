<UserControl
    x:Class="GameLauncher.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:GameLauncher.Models"
    xmlns:ViewModels="clr-namespace:GameLauncher.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:local="clr-namespace:GameLauncher.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    d:DataContext="{d:DesignInstance Type=ViewModels:SettingsViewModel}"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="b2v" />
        <CollectionViewSource x:Key="GenreListCVS"
                              Source="{Binding GenreListOC}"
                              CollectionViewType="{x:Type dat:ListCollectionView}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <materialDesign:ColorZone
            Grid.ColumnSpan="40"
        Margin="0,0,0,0"
        materialDesign:ShadowAssist.ShadowDepth="Depth2"
        materialDesign:ShadowAssist.ShadowEdges="Bottom"
        Mode="PrimaryMid">
            <!--  Tab Control  -->
            <StackPanel
            Margin="4"
            VerticalAlignment="Top"
            Orientation="Horizontal">
                <RadioButton
                Name="ThemeBtn"
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="THEMES"
                IsChecked="True"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
                <RadioButton
                Name="GenreBtn"
                Margin="4"
                Content="GENRES"
                IsChecked="False"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            </StackPanel>
        </materialDesign:ColorZone>
        <!-- ############################################################################################################### -->
        <Grid Name="ThemeBlock"
                  Margin="30 60 30 0"
                  Grid.ColumnSpan="4" Grid.RowSpan="10"
                  Visibility="{Binding Path=IsChecked, ElementName=ThemeBtn, Converter={StaticResource b2v}}">
            <!-- CONTENT OF THE THEMES TAB GOES IN HERE -->
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Height="40">Enable Dark Mode</TextBlock>
                <TextBlock Height="40">Primary Color (coming soon)</TextBlock>
                <TextBlock Height="40">Accent Color (coming soon)</TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Width="85">
                <ToggleButton x:Name="themeToggle"
                              HorizontalAlignment="Right"
                              Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                              Checked="DarkModeToggle_Checked"
                              Unchecked="DarkModeToggle_Unchecked"
                              VerticalAlignment="Top" 
                              Margin="0 0 20 0"/>
                <StackPanel Orientation="Horizontal" Margin="0 15 0 0" Width="90">
                    <TextBox x:Name="ColorPrimary"
                             Width="60"
                             Height="30"
                             materialDesign:HintAssist.Hint="Hex Code"
                             KeyDown="ChangePrimary" 
                             MaxLength="6"/>
                    <Rectangle x:Name="ColorPrimaryRect" Height="25" Width="25" Fill="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0" Width="90">
                    <TextBox x:Name="ColorAccent"
                             Width="60"
                             Height="30"
                             materialDesign:HintAssist.Hint="Hex Code"
                             KeyDown="ChangeAccent" />
                    <Rectangle x:Name="ColorAccentRect" Height="25" Width="25" Fill="White" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- ############################################################################################################### -->
        <Grid Name="GenreBlock"
                  Margin="10 60 10 10"
                  Grid.RowSpan="6"
                  Grid.ColumnSpan="4"
                  ScrollViewer.CanContentScroll="True"
                  Visibility="{Binding Path=IsChecked, ElementName=GenreBtn, Converter={StaticResource b2v}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- CONTENT OF THE GENRES TAB GOES IN HERE-->
            <StackPanel Orientation="Horizontal" Grid.RowSpan="1"
                        Height="25"
                        VerticalAlignment="Top">
                <TextBlock Text="New Genre: "
                               FontWeight="Bold"
                           Margin="0 5 0 0"
                           Height="30"
                           VerticalAlignment="Top" />
                <TextBox x:Name="NewGenreName"
                    Style="{StaticResource MaterialDesignTextBox}"
                         Width="150"
                         Height="25"
                         FontSize="15"
                         Margin="10 0 0 0"
                         VerticalAlignment="Top" />
                <Button Click="AddNewGenre_OnClick" Style="{DynamicResource MaterialDesignToolButton}" VerticalAlignment="Top" Height="20">
                    <materialDesign:PackIcon Kind="Send"
                             Opacity=".56"
                             VerticalAlignment="Center" />
                </Button>
            </StackPanel>
            <TextBlock Text="Current Genres:" Margin="0 45 0 0" FontWeight="Bold" />
            <ScrollViewer Grid.Row="1" Grid.RowSpan="4" VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!--Need to get the list of current genres to fill this-->
                    <ItemsControl x:Name="genreListView"
                          Margin="0 0 0 10"
                          ItemsSource="{Binding Source={StaticResource GenreListCVS}}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="5 5 5 5">
                                    <WrapPanel>
                                        <TextBlock Padding="10 0 0 0" Text="{Binding Name}" Width="140" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Click="DeleteGenre_OnClick"
                                            Tag="{Binding Guid}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" Padding="5 5 5 5">
                                            <materialDesign:PackIcon Kind="Delete" HorizontalAlignment="Center" />
                                        </Button>
                                    </WrapPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>